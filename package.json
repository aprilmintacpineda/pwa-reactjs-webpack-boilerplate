{
  "name": "pwa-reactjs-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Boiler for a PWA using ReactJS and Webpack with support for S3 static hosting upload.",
  "scripts": {
    "jest": "jest",
    "jest-watch": "jest --watchAll",
    "clean-build": "rm -rf build",
    "dev": "npm run clean-build && webpack-dev-server --progress --config configs/webpack/dev.js",
    "build": "npm run clean-build && webpack --progress --config configs/webpack/prod.js",
    "deployToS3": "npm run build && npm run uploadToS3",
    "uploadToS3": "node tools/uploadToS3",
    "serve": "serve build",
    "start": "npm run build && npm run serve",
    "eslint": "eslint \"src/**/*.js\" \"tools/**/*.js\" \"configs/**/*.js\" --fix",
    "prettier": "prettier \"src/**/*.js\" \"tools/**/*.js\" \"configs/**/*.js\" --write",
    "lint": "npm run prettier && npm run eslint",
    "reinstallNodeModules": "rm -rf node_modules && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:aprilmintacpineda/pwa-reactjs-webpack-boilerplate.git"
  },
  "author": "April Mintac Pineda",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "fluxible-js": "^4.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-fluxible": "^4.0.5",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "autoprefixer": "^9.7.6",
    "aws-sdk": "^2.668.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-minify": "^0.5.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "image-type": "^4.1.0",
    "is-image": "^3.0.0",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "mime-types": "^2.1.27",
    "mini-css-extract-plugin": "^0.9.0",
    "node-gzip": "^1.1.2",
    "node-sass": "^4.14.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "ora": "^4.0.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "process.argv": "^0.1.0",
    "raw-loader": "^4.0.1",
    "recursive-readdir": "^2.2.2",
    "sass-loader": "^8.0.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "style-loader": "^1.2.1",
    "terser": "^4.6.13",
    "terser-webpack-plugin": "^3.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-loader-clean-pragma": "^1.0.2",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": "13.x",
    "npm": "6.x"
  }
}
